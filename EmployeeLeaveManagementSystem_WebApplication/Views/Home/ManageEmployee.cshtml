@using PagedList.Mvc;
@using PagedList;

@model IPagedList<EmployeeLeaveManagementSystem_WebApplication.Models.Emp>

@{
    ViewBag.Title = "ManageEmployee";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

            <h2>Manage Employee</h2>

            
            <table class="table">
                <tr>
                    <th>
                      Picture
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.First().empid)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().FullName)
                    </th>



                    <th>
                        @Html.DisplayNameFor(model => model.First().Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Dob)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.First().Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().RegDate)
                    </th>
                    <th>Actions</th>
                </tr>
               
                @foreach (var item in Model)
                {
            <tr>
                <td>
                  <img src="@Url.Content(item.ImageURL)" height="50" width="50" />
                </td>

               


                <td>
                    @Html.DisplayFor(modelItem => item.empid)
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dob)
                </td>


                <td>
                    @if (ViewBag.Act == 0)
                    {
                        <b style="color:Green;">Not Active</b>

                    }
                    else 
                    {
                        <b style="color:Blue;">Active</b>
                    }
                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegDate)
                </td>
                <td>
                    <a href="@Url.Action("EditEmployee", "Home", new {  aid=item.Id  })">
                        <i class="glyphicon glyphicon-pencil" style="font-size:20px;"></i>

                    </a>

                    <a href="@Url.Action("Delete", "Home", new {  aid=item.Id  })">
                        <i class="glyphicon glyphicon-remove" style="font-size:20px;"></i>

                    </a>


                </td>
            </tr>
                    
                }

            </table>
            @Html.PagedListPager(Model, page => Url.Action("ManageEmployee", new { page}), new PagedListRenderOptions() { DisplayItemSliceAndTotal = true })
